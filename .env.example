# PMS Intelligence Hub - Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME="PMS Intelligence Hub"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/pms_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Salesforce CRM Configuration
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=your_salesforce_password
SALESFORCE_SECURITY_TOKEN=your_security_token
SALESFORCE_DOMAIN=login
SALESFORCE_CLIENT_ID=your_client_id
SALESFORCE_CLIENT_SECRET=your_client_secret
SALESFORCE_API_VERSION=58.0

# Wealth Spectrum PMS Configuration
WEALTH_SPECTRUM_API_KEY=your_wealth_spectrum_api_key
WEALTH_SPECTRUM_BASE_URL=https://api.wealthspectrum.com
WEALTH_SPECTRUM_USERNAME=your_username
WEALTH_SPECTRUM_PASSWORD=your_password
WEALTH_SPECTRUM_API_VERSION=v1

# Security Settings
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS Settings (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8501,https://yourdomain.com
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# Cache Settings
CACHE_TTL_SECONDS=3600
REDIS_URL=redis://localhost:6379/0

# File Upload Settings
MAX_FILE_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.csv,.xlsx,.xls,.pdf
UPLOAD_DIR=uploads

# Dashboard Settings
DEFAULT_PAGE_SIZE=50
MAX_PAGE_SIZE=1000
DASHBOARD_REFRESH_INTERVAL=300

# Export Settings
PDF_TEMPLATE_DIR=templates/pdf
EXPORT_DIR=exports

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/pms_hub.log
LOG_MAX_SIZE_MB=10
LOG_BACKUP_COUNT=5

# Email Settings (for automated reports)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@company.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true

# Performance Settings
ENABLE_PROFILING=false
SLOW_QUERY_THRESHOLD=1.0

# Feature Flags
ENABLE_API_DOCS=true
ENABLE_METRICS_ENDPOINT=true
ENABLE_HEALTH_CHECK=true
ENABLE_AUDIT_LOGGING=true

